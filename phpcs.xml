<?xml version="1.0"?>
<ruleset name="Event Listeners Collection">
    <description>Event Listeners Collection</description>

    <config name="testVersion" value="7.1-"/>
    <config name="ignore_warnings_on_exit" value="1"/>

    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>./tests/coverage</exclude-pattern>
    <exclude-pattern>./tests/php/bootstrap.php</exclude-pattern>

    <rule ref="Inpsyde">
        <exclude name="PHPCompatibility.FunctionDeclarations.NewReturnTypeDeclarations.voidFound"/>
        <exclude name="Inpsyde.CodeQuality.ReturnTypeDeclaration.IncorrectVoidReturnType" />
    </rule>
</ruleset>
